<div class="session">
  <div class="session__date">{{ date }}</div>
  <div class="session__meta">
    <div class="session__time icon">
{{ time }}</div>
    <div class="session__room icon">
Room{{ room }}</div>
    <div class="session__topics icon">
      <ul>
        {% for topic in topics %}
          <li> {{topic}} </li>
          {% endfor %}
        </ul>
      </div><!--// topics -->
    </div><!-- // meta -->
    <h2 class="session__title">
      {{ title }}</h2>
    <div class="session__body">
      <div class="session__description">
        {{ description }}
      </div>

      {% block speakers %}
      <h3 class="region__title">Speakers</h3>
      <div class="session__speakers">
        {% include "@components/speaker/speaker.twig" with {
          'speaker': speaker,
          'photo': photo,
          'bio': bio,
          'link': link
        } only %}
      </div>
      {% endblock %}
    </div>
  </div>
